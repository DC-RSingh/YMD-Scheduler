generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Students {
  Id   Int    @id @default(autoincrement())
  Name String
  Gender String 
  Age Int
  Email String 
  Telephone String 
  PaymentMethod String
}

model StaffType {
  Id   Int    @id @default(autoincrement())
  Type String 
}

model Staff {
  Id   Int    @id @default(autoincrement())
  Type Int
  Name String
  Gender String 
  Age Int
  MaxHoursPerWeek Int
}

model Skills {
  Id   Int    @id @default(autoincrement())
  Skill String 
}

model Credentials {
  Id   Int    @id @default(autoincrement())
  Credential String
}

model Restrictions {
  Id   Int    @id @default(autoincrement())
  Restriction String 
}

model StaffSkills {
  Id   Int    @id @default(autoincrement())
  StaffId Int
  SkillId Int
}

model StaffCredentials {
  Id   Int    @id @default(autoincrement())
  StaffId Int
  CredentialId Int
}

model StaffRestrictions {
  Id   Int    @id @default(autoincrement())
  StaffId Int
  RestrictionId Int
}

model RoomType {
  Id   Int    @id @default(autoincrement())
  Type String 
}

model Room {
  Id   Int    @id @default(autoincrement())
  Type Int
  Name String
  RoomSize Int
  HasPiano Int
}

model Days {
  Id   Int    @id @default(autoincrement())
  Day String
}

model TimeSlot {
  Id   Int    @id @default(autoincrement())
  StartTime DateTime 
  EndTime DateTime 
  Day Int
}

model ClassType {
  Id   Int    @id @default(autoincrement())
  Type String 
}

model ClassSubType {
  Id   Int    @id @default(autoincrement())
  Type String 
}

model StaffAvailableDays {
  Id   Int    @id @default(autoincrement())
  StaffId Int
  DayId Int
}

model Class {
  Id   Int    @id @default(autoincrement())
  ClassType Int
  ClassSubType Int
  StaffId Int
  TimeSlotId Int
  RoomId Int
  MaxSize Int
}

model StudentClassList {
  Id   Int    @id @default(autoincrement())
  ClassId Int
  StudentId Int
}

